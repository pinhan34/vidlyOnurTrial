@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment
    On multiple lines    
*@


@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
<ul>
    <li>Genre:@Model.Movie.Genre</li>
    <li>Date added:@Model.Movie.DateAdded</li>
    <li>Release Date:@Model.Movie.ReleaseDate</li>
    <li>Number in Stock Left:@Model.Movie.NumberInStock</li>
</ul>
}

